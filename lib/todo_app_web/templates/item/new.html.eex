<h1>New Item</h1>
<%= if @item_changeset.action do %>
  <div class="alert alert-danger">
    <p>Validation failed!</p>
  </div>
<% end %>

<%= form_for @item_changeset, todo_item_path(@conn, :create, @todo), fn(f) -> %>
  <div class="form-group">
    <%= text_input f, :content, placeholder: "Content", class: "form-control" %>
    <%= error_tag f, :content %>
  </div>

  <%= submit "Create Item", class: "btn btn-success" %>
<% end %>

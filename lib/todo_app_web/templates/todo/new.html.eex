<h1>New Todo</h1>
<%= if @todo_changeset.action do %>
  <div class="alert alert-danger">
    <p>Validation failed!</p>
  </div>
<% end %>

<%= form_for @todo_changeset, todo_path(@conn, :create), fn(f) -> %>
  <div class="form-group">
    <%= text_input f, :name, placeholder: "Name", class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <%= submit "Create Todo", class: "btn btn-success" %>
<% end %>
